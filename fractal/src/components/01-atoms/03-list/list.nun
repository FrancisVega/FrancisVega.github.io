{# @list #}
<ul class="list
    {%- for mod in modifiers %} list--{{ mod }}{% endfor %}
    {%- for cls in classes %} {{ cls }}{% endfor %}">

    {% for item in items %}
    <li class="list__item">
        {% if item.href %}
        <a class="list__link" href="{{ item.href }}" title="{{ item.title }}">{{ item.text }}</a>
        {% else %}
        <p class="list__link">{{ item.text }}</p>
        {% endif %}
    </li>
    {% endfor %}

</ul>
